precio_unit = 3.49  
descuento = 0.6  


pan_no_fresco = int(input("Introduzca la cantidad de pan no fresco vendido: "))

precio_sin_descuento = pan_no_fresco * precio_unit
descuento_tt= precio_sin_descuento * descuento
precio_final = precio_sin_descuento - descuento_tt

print(f"""
    Precio por barra de pan fresco: ${precio_unit:.2f}
    Descuento por pan no fresco: {descuento:.2f}%
    Pan no fresco vendido: {pan_no_fresco} unidades
    Precio sin descuento: ${precio_sin_descuento:.2f}
    Descuento total: ${descuento_tt:.2f}
    Precio final: ${precio_final:.2f}
""")
